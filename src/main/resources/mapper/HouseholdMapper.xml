<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.apt.aptmanagement.application.household.HouseholdMapper">

    <!-- 동+호로 세대 조회 (회원가입 시 세대 존재 여부 확인) -->
    <select id="findByDongAndHo" resultType="com.apt.aptmanagement.application.household.model.Household">
        SELECT household_id, dong, ho, created_at
        FROM household
        WHERE dong = #{dong} AND ho = #{ho}
    </select>

    <!-- 세대 등록 -->
    <insert id="save" useGeneratedKeys="true" keyProperty="householdId"
            parameterType="com.apt.aptmanagement.application.household.model.Household">
        INSERT INTO household (dong, ho, created_at)
        VALUES (#{dong}, #{ho}, NOW())
    </insert>

    <!-- 전체 세대 목록 조회 (관리자 세대 관리) -->
    <select id="findAll" resultType="com.apt.aptmanagement.application.household.model.Household">
        SELECT household_id, dong, ho, created_at
        FROM household
        ORDER BY dong, ho
    </select>

    <!-- 세대 ID로 조회 -->
    <select id="findById" resultType="com.apt.aptmanagement.application.household.model.Household">
        SELECT household_id, dong, ho, created_at
        FROM household
        WHERE household_id = #{householdId}
    </select>

    <!-- 세대 정보 수정 -->
    <update id="update" parameterType="com.apt.aptmanagement.application.household.model.Household">
        UPDATE household
        SET dong = #{dong}, ho = #{ho}
        WHERE household_id = #{householdId}
    </update>

    <!-- 세대 삭제 -->
    <delete id="deleteById">
        DELETE FROM household WHERE household_id = #{householdId}
    </delete>

</mapper>
